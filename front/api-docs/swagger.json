  "components": {
    "schemas": {
      "FuncionarioModel": {
        "type": "object",
        "required": ["nome", "sobrenome", "cpf", "rg", "email", "endereco", "senha"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "nome": {
            "type": "string"
          },
          "sobrenome": {
            "type": "string"
          },
          "cpf": {
            "type": "string",
            "pattern": "\\d{11}",
            "description": "CPF deve conter 11 dígitos numéricos"
          },
          "rg": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "endereco": {
            "type": "string"
          },
          "dataNascimento": {
            "type": "string",
            "format": "date"
          },
          "pis": {
            "type": "number",
            "format": "double"
          },
          "dataDeAdmissao": {
            "type": "string",
            "format": "date"
          },
          "cargo": {
            "type": "string"
          },
          "senha": {
            "type": "string",
            "minLength": 8,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]{8,}$"
          }
        }
      },
      "CompanyModel": {
        "type": "object",
        "required": ["cnpj", "razaoSocial"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "cnpj": {
            "type": "string",
            "pattern": "\\d{2}\\.\\d{3}\\.\\d{3}/\\d{4}-\\d{2}",
            "description": "CNPJ no formato XX.XXX.XXX/XXXX-XX"
          },
          "razaoSocial": {
            "type": "string"
          },
          "nomeFantasia": {
            "type": "string"
          },
          "inscricaoEstadual": {
            "type": "string"
          }
        }
      },
      "CompanyPatchDTO": {
        "type": "object",
        "properties": {
          "cnpj": {
            "type": "string"
          },
          "razaoSocial": {
            "type": "string"
          }
        }
      },
      "FolhaPagamentoModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "companyId": {
            "type": "integer",
            "format": "int64"
          },
          "dataInicio": {
            "type": "string",
            "format": "date"
          },
          "dataFim": {
            "type": "string",
            "format": "date"
          },
          "salarioBase": {
            "type": "number",
            "format": "decimal"
          }
        }
      },
      "DescontosModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "nome": {
            "type": "string"
          },
          "tipo": {
            "type": "string"
          },
          "valor": {
            "type": "number",
            "format": "decimal"
          },
          "ativo": {
            "type": "boolean"
          }
        }
      },
      "PublicRegisterAccountDto": {
        "type": "object",
        "required": ["nome", "sobrenome", "email", "password", "cpf"],
        "properties": {
          "nome": { "type": "string" },
          "sobrenome": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "minLength": 8 },
          "cpf": { "type": "string", "pattern": "\\d{11}" },
          "rg": { "type": "string" },
          "endereco": { "type": "string" }
        }
      },
      "PublicLoginAccountDto": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string" }
        }
      },
      "PublicForgetPasswordDto": {
        "type": "object",
        "required": ["email"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          }
